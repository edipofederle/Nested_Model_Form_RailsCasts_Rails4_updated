<h1>Surveys</h1>

<% @surveys.each do |survey| %>
  <div class="article">
    <h2><%= link_to survey.name, survey %></h2>
    <%= pluralize(survey.questions.size, "Question") %>
    <p class='links'>
   <!-- Added links to the index page to show edit and delete --> 
      <%= link_to 'Show', survey %>
      <%= link_to 'Edit', edit_survey_path(survey) %>
      <%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %>
   </p>
  </div>
<% end %>

<p><%= link_to 'New Survey', new_survey_path %></p>
